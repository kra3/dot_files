*foreground:              text
*cursorColor:             rosewater
*fading:                  35
*fadeColor:               base

! ANSI Colors (0-15)
! Black
*color0:  surface1
*color8:  surface2

! Red
*color1:  red
*color9:  red

! Green
*color2:  green
*color10: green

! Yellow
*color3:  yellow
*color11: yellow

! Blue
*color4:  blue
*color12: blue

! Magenta
*color5:  pink
*color13: pink

! Cyan
*color6:  teal
*color14: teal

! White
*color7:  subtext1
*color15: text

# ============================================================================
# URxvt Terminal Settings
# ============================================================================
# rxvt-unicode (legacy but still used on older systems)

! Font (try modern fonts first, fall back to Terminus)
URxvt.font: \
    xft:FuraCode Nerd Font:size=11:antialias=true, \
    xft:Noto Sans Mono:size=11:antialias=true, \
    xft:DejaVu Sans Mono:size=11:antialias=true, \
    xft:Terminus:size=12

! General settings
URxvt.loginShell:         true
URxvt.termName:           rxvt-unicode-256color
URxvt.buffered:           true
URxvt.scrollBar:          false
URxvt.secondaryScroll:    true
URxvt.scrollTtyKeypress:  true
URxvt.scrollTtyOutput:    false
URxvt.geometry:           100x30
URxvt.saveLines:          10000
URxvt.transparent:        false
URxvt.depth:              32
URxvt.dynamicColors:      on
URxvt.intensityStyles:    true
URxvt.letterSpace:        0
URxvt.lineSpace:          0

! Appearance
URxvt.internalBorder:     4
URxvt.externalBorder:     0
URxvt.cursorBlink:        false
URxvt.cursorUnderline:    false
URxvt.pointerBlank:       true

! Perl extensions (URL selection, clipboard, keyboard selection)
URxvt.perl-ext-common:    default,matcher,keyboard-select,url-select,clipboard

! URL handling
URxvt.url-launcher:       /usr/bin/xdg-open
URxvt.matcher.button:     1
URxvt.url-select.launcher: /usr/bin/xdg-open
URxvt.url-select.underline: true
URxvt.url-select.autocopy: true

! Keyboard shortcuts
URxvt.keysym.M-Escape:    perl:keyboard-select:activate
URxvt.keysym.M-s:         perl:keyboard-select:search
URxvt.keysym.M-u:         perl:url-select:select_next
URxvt.keysym.M-c:         perl:clipboard:copy
URxvt.keysym.M-v:         perl:clipboard:paste
URxvt.keysym.M-C-v:       perl:clipboard:paste_escaped
URxvt.keysym.Control-Up:   \033[1;5A
URxvt.keysym.Control-Down: \033[1;5B
URxvt.keysym.Control-Left: \033[1;5D
URxvt.keysym.Control-Right: \033[1;5C

! Clipboard
URxvt.clipboard.autocopy: true
URxvt.clipboard.copycmd:  xclip -i -selection clipboard
URxvt.clipboard.pastecmd: xclip -o -selection clipboard

# ============================================================================
# xterm Terminal Settings
# ============================================================================

! Font (modern alternatives with fallback)
xterm*faceName: \
    FuraCode Nerd Font:size=11:antialias=true, \
    DejaVu Sans Mono:size=11:antialias=true

! General settings
xterm*loginShell:         true
xterm*termName:           xterm-256color
xterm*saveLines:          10000
xterm*scrollBar:          false
xterm*scrollTtyKeypress:  true
xterm*scrollTtyOutput:    false
xterm*jumpScroll:         true
xterm*multiScroll:        true
xterm*toolBar:            false
xterm*rightScrollBar:     false

! Appearance
xterm*borderWidth:        0
xterm*internalBorder:     4
xterm*cursorBlink:        false
xterm*cursorUnderline:    false
xterm*pointerShape:       XTerm

! Character handling
xterm*utf8:               1
xterm*locale:             true
xterm*utf8Title:          true
xterm*wideChars:          true
xterm*boldMode:           true
xterm*colorBDMode:        true

! Mouse and keyboard
xterm*eightBitInput:      false
xterm*eightBitControl:    false
xterm*eightBitOutput:     true
xterm*altSendsEscape:     true
xterm*metaSendsEscape:    true

! Copy/Paste behavior (modernized)
xterm*selectToClipboard:  true
xterm*VT100.Translations: #override \
    Shift <Key>Up:              scroll-back(1) \n\
    Shift <Key>Down:            scroll-forw(1) \n\
    Ctrl Shift <Key>C:          copy-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>V:          insert-selection(CLIPBOARD) \n\
    Shift <Btn1Up>:             select-end(CLIPBOARD, CUT_BUFFER1) \n\
    ~Shift <Btn1Up>:            select-end(PRIMARY, CUT_BUFFER0) \n\
    Shift <Btn2Up>:             insert-selection(CLIPBOARD, CUT_BUFFER1) \n\
    ~Shift ~Ctrl ~Meta <Btn2Up>: insert-selection(PRIMARY, CUT_BUFFER0)

# ============================================================================
# XTerm VT102 Emulation Settings
# ============================================================================

xterm*vt100.metaSendsEscape: true
xterm*vt100.backarrowKey:    false
xterm*vt100.translations: #override \
    <Key>BackSpace: string(0x7f) \n\
    <Key>Delete:    string("\033[3~") \n\
    <Key>Home:      string("\033[1~") \n\
    <Key>End:       string("\033[4~")

# ============================================================================
# Rofi (Application Launcher) Settings
# ============================================================================

rofi.color-enabled:  true
rofi.font:           FuraCode Nerd Font 11
rofi.modi:           drun,run,window,ssh
rofi.show-icons:     true
rofi.drun-icon-theme: Papirus-Dark

# Catppuccin Mocha colors for rofi
! Property Name         Background    Border        Separator
rofi.color-window:      base,         lavender,     surface0

! State                 bg            fg            alt bg        hl bg         hl fg
rofi.color-normal:      base,         text,         surface0,     surface1,     lavender
rofi.color-active:      base,         blue,         surface0,     surface1,     blue
rofi.color-urgent:      base,         red,          surface0,     surface1,     red

# ============================================================================
# Dunst Notification Daemon
# ============================================================================

dunst.background:    base
dunst.foreground:    text
dunst.frame_color:   lavender
dunst.font:          FuraCode Nerd Font 11
