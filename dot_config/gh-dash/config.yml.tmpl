# ============================================================================
# gh-dash Configuration
# ============================================================================
# GitHub CLI Dashboard - Terminal UI for PRs, Issues, and Notifications
# Documentation: https://github.com/dlvhdr/gh-dash

# ============================================================================
# Pull Request Sections
# ============================================================================
prSections:
  - title: Mine
    filters: is:open author:@me
  - title: Review
    filters: is:open review-requested:@me
  - title: Involved
    filters: is:open involves:@me -author:@me
  - title: All
    filters: is:open
  - title: Commented
    filters: commenter:@me

# ============================================================================
# Issues Sections
# ============================================================================
issuesSections:
  - title: Mine
    filters: is:open author:@me
  - title: Assigned
    filters: is:open assignee:@me
  - title: Involved
    filters: is:open involves:@me -author:@me

# ============================================================================
# Default Settings
# ============================================================================
defaults:
  preview:
    open: true
    width: 84
  prsLimit: 20
  issuesLimit: 20
  view: prs
  layout:
    prs:
      updatedAt:
        width: 7
      repo:
        width: 15
      author:
        width: 15
      lines:
        width: 16
    issues:
      updatedAt:
        width: 7
      repo:
        width: 15
      creator:
        width: 10
      assignees:
        width: 20
  refetchIntervalMinutes: 15

# ============================================================================
# Key Bindings
# ============================================================================
keybindings:
  prs: []
  issues: []

# ============================================================================
# Repository Paths
# ============================================================================
repoPaths: {}

# ============================================================================
# Pager Settings
# ============================================================================
pager:
  diff: delta
